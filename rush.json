{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",

  "rushVersion": "5.47.0",

  "pnpmVersion": "6.10.0",

  "pnpmOptions": {
    "preventManualShrinkwrapChanges": true,

    "useWorkspaces": true
  },

  "nodeSupportedVersionRange": ">=14.15.0 <15.0.0 || >=16.3.0 <17.0.0",
  "suppressNodeLtsWarning": true,
  "ensureConsistentVersions": true,

  "projectFolderMinDepth": 2,
  "projectFolderMaxDepth": 2,

  "gitPolicy": {
    "versionBumpCommitMessage": "Applying package updates. [skip-ci]",
    "changeLogUpdateCommitMessage": "Deleting change files and updating change logs for package updates. [skip-ci]"
  },

  "repository": {
    "url": "https://github.com/ArekZc/angular-boilerplate",
    "defaultBranch": "master",
    "defaultRemote": "origin"
  },

  "eventHooks": {
    "preRushInstall": [],
    "postRushInstall": [],
    "preRushBuild": [],
    "postRushBuild": []
  },

  "variants": [],

  "projects": [
    {
      "packageName": "@tools/typescript",
      "projectFolder": "tools/typescript"
    },
    {
      "packageName": "@tools/eslint",
      "projectFolder": "tools/eslint"
    },
    {
      "packageName": "@tools/jest",
      "projectFolder": "tools/jest"
    },
    {
      "packageName": "@apps/ui",
      "projectFolder": "apps/ui"
    },
    {
      "packageName": "@apps/api",
      "projectFolder": "apps/api"
    },
    {
      "packageName": "@apps/landing-page",
      "projectFolder": "apps/landing-page"
    },
    {
      "packageName": "@libs/design",
      "projectFolder": "libs/design"
    },
    {
      "packageName": "@libs/theme",
      "projectFolder": "libs/theme"
    },
    {
      "packageName": "@libs/mdx-blocks",
      "projectFolder": "libs/mdx-blocks"
    }
  ]
}
